{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "outDir": "./bin",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "./bin",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "newLine": "LF"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test/**/*",
    "bin/**/*",
    "build/**/*",
    "dist/**/*",
    "docs/**/*",
    "log/*",
    "node_modules/**/*"
  ]
}
