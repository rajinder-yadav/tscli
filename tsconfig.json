{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "outDir": "./build",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "build/**/*",
    "dist/**/*",
    "docs/**/*",
    "log/*",
    "node_modules/**/*"
  ]
}
