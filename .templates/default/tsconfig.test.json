{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./bin",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "newLine": "LF",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build",
    "removeComments": true,
    "inlineSourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "bin/**/*",
    "build/**/*",
    "dist/**/*",
    "docs/**/*",
    "log/*",
    "node_modules/**/*",
    "test/**/*"
  ]
}
